<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="BodyText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ListTitle" parent="Title">
        <item name="android:textColor">@color/title_darker</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="AdTagUrl" parent="BodyText">
        <item name="android:textColor">@color/title_dark</item>
    </style>

    <style name="Log" parent="BodyText">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CompanionPlaceholder" parent="AdTagUrl">
    </style>

</resources>
